@model HotDesk.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<body class="login-page">
    <h1>Вход на сайт HotDesk</h1>
    <a asp-action="Register" asp-controller="Account">Регистрация</a>
    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <label asp-for="Email">Введите Логин/Email</label>
                <input type="text" asp-for="Email" />
                <span asp-validation-for="Email" />
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Password">Введите пароль</label>
                <input asp-for="Password" />
                <span asp-validation-for="Password" />
            </div>
            <br>
            <div class="form-group">
                <button type="submit" class="btn btn_log btn_next"><span>Войти</span></button>
            </div>
        </div>
    </form>
</body>