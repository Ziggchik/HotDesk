@model Reservation
@{
    ViewData["Title"] = "Reservation Confirmation";
}

<body class="user-page">
    <div class="status">
        Вы авторизованы под логином @User.Identity.Name
    </div>
    <ul class="navigation">
        <li class="active-tab"><a asp-action="Index" asp-controller="Home">Свободные места</a></li>
        <li class="anchor-right"><a asp-action="Logout" asp-controller="Account">Выйти</a></li>
        <li class="anchor-right"><a asp-action="UserReservations" asp-controller="Home">Мои забронированные места</a></li>
    </ul>
    <div>
        <h1>Бронирование прошло успешно, поздравляем!</h1>
        <h2>Подробности: </h2>
        <div>
            <table>
                <tr>
                    <td>Номер бронирования</td>
                    <td>@Model.Id</td>
                </tr>
                <tr>
                    <td>Дата бронирования:</td>
                    <td>@Model.Date.ToShortDateString()</td>
                </tr>
                <tr>
                    <td>Дополнительные устройства</td>
                    <td>
                        @foreach (var device in Model.Devices)
                        {
                            @device.Name <br />
                        }
                    </td>
                </tr>
            </table>
        </div>
    </div>
</body>